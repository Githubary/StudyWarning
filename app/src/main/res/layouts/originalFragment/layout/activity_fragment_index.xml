<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".mvp.view.originalFragment.indexFragment"
    android:orientation="vertical">


<com.example.myapplication.utils.ScrollView.MyScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.example.myapplication.utils.ViewPager.ImgScroll
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />

            <LinearLayout
                android:layout_below="@+id/viewpager"
                android:id="@+id/four_choose"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:drawableTop="@drawable/ic_pref_course"
                    android:text="精品课程"
                    android:textColor="#8697A0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:drawableTop="@drawable/ic_prefer_teacher"
                    android:text="名师课程"
                    android:textColor="#8697A0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:drawableTop="@drawable/ic_concentration"
                    android:text="专注学习"
                    android:textColor="#8697A0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:drawableTop="@drawable/ic_chuleipangtong"
                    android:text="触类旁通"
                    android:textColor="#8697A0"/>
            </LinearLayout>

        <TextView
            android:layout_below="@+id/four_choose"
            android:layout_width="match_parent"
            android:layout_height="1200dp" />

    </RelativeLayout>
</com.example.myapplication.utils.ScrollView.MyScrollView>
</RelativeLayout>