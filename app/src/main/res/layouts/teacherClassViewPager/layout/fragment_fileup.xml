                    android:textSize="15dp"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rightjiantou"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fileUp_folder6"
                android:layout_below="@id/fileUp_folder5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_background"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/fileUp_img6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fileup_folder"/>

                <TextView
                    android:layout_toRightOf="@+id/fileUp_img6"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:text="课程设计"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rightjiantou"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fileUp_folder7"
                android:layout_below="@id/fileUp_folder6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_background"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/fileUp_img7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fileup_folder"/>

                <TextView
                    android:layout_toRightOf="@+id/fileUp_img7"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:text="习题与答案"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rightjiantou"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fileUp_folder8"
                android:layout_below="@id/fileUp_folder7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_background"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/fileUp_img8"
                    android:layout_width="wrap_content"
