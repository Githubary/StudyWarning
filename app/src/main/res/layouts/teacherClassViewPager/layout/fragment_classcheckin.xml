<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <RelativeLayout
        android:id="@+id/kaoqin2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/checkin_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:text="2019-10-27"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/checkIn_State"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"

                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content"
                android:text="签到进行中"
                android:textColor="@color/white"
                android:background="@drawable/checkin_state_background"/>

            <TextView
                android:layout_below="@+id/checkIn_State"
                android:id="@+id/Countdown"
                android:gravity="center"
                android:textColor="#FF6a6a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>



        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>