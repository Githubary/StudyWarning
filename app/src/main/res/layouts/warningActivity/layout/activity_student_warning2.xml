            android:textColor="#fff"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tishi1"
        android:layout_below="@+id/know"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
