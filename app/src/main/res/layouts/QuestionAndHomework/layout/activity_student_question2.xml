<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.QuetionAndHomework.studentQuestion1Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/student_question_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:popupTheme="@style/ToolbarPopupTheme">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="上课提问问题"
            android:textColor="#1296db"
            android:textSize="22sp" />

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/student_question_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="2.写出图1-3所示各波形的表达式"
                    android:textSize="15dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:text="添加" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/question_img"
                android:layout_below="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/question2"
                />

            <TextView
                android:id="@+id/your_answer"
                android:layout_below="@+id/question_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="15dp"
                android:text="参考答案"/>

            <ImageView
                android:layout_below="@+id/your_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/answer2"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>