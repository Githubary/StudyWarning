<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/confirm_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:text="确认更改密码"
        android:textSize="20dp"/>
    <RelativeLayout
        android:id="@+id/changePassword_relativelayout"
        android:layout_below="@+id/confirm_change_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        android:layout_marginHorizontal="40dp">
    <TextView
        android:id="@+id/input_password_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入密码"/>
    <EditText
        android:id="@+id/input_new_password"
        android:layout_below="@+id/input_password_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:hint="请输入新密码" />
    <TextView
        android:id="@+id/confirm_new_password_name"
        android:layout_below="@+id/input_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="再次输入密码"/>

    <EditText
        android:id="@+id/confirm_new_password"
        android:layout_below="@id/confirm_new_password_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:hint="请再次输入新密码"
        android:layout_marginHorizontal="30dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/changePassword_confirm"
        android:layout_below="@id/changePassword_relativelayout"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/login_btn"/>
</RelativeLayout>