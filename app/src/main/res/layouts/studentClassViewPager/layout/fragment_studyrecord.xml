<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    tools:context=".mvp.view.studentClassViewPager.ChaptersFragment">


    <TextView
        android:id="@+id/Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/ic_studyrecord_top"/>

    <TextView
        android:id="@+id/kaoqingCount"
        android:layout_below="@+id/Top"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_background"
        android:text="考勤次数: \t\t\t\t7/8"
        android:drawableRight="@drawable/ic_rightjiantou"
        android:textColor="	#363636"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/classAnswer_Count"
        android:layout_below="@+id/kaoqingCount"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_background"
        android:text="课堂提问回答次数: \t\t\t\t9/15"
        android:textColor="	#363636"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/homework_finishCount"
        android:layout_below="@+id/classAnswer_Count"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_background"
        android:text="作业完成次数: \t\t\t\t12/12"
        android:textColor="	#363636"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/watch_pptCount"
        android:layout_below="@+id/homework_finishCount"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_background"
        android:text="ppt浏览次数: \t\t\t\t56次"
        android:textColor="#363636"
        android:textSize="20dp"/>



</RelativeLayout>