<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".mvp.view.studentClassViewPager.studentClassMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/student_course_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:popupTheme="@style/ToolbarPopupTheme">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="电气工程班级"
            android:textColor="#1296db"
            android:textStyle="bold|italic"
            android:textSize="22sp" />

    </androidx.appcompat.widget.Toolbar>

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/student_course_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#1296db"
        android:alpha="0.7"
        app:xTabTextColor="#FFFFFF"
        app:xTabTextBold="false"
        app:xTabTextSelectedBold="true"
        app:xTabSelectedTextColor="#FFFFFF"
        app:xTabSelectedTextSize="20dp"
        app:xTabMode="scrollable"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/student_course_viewpager_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>