<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_grey">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_collection_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:popupTheme="@style/ToolbarPopupTheme"
        >
        <TextView
            android:id="@+id/my_wallet_tilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textColor="@color/dialog_black"
            android:layout_gravity="center"
            android:textSize="22sp" />

    </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/my_collection_R1"
            android:layout_below="@+id/my_collection_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/my_collection"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/my_collection_pc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:drawableTop="@drawable/ic_collection_xiangce"
                android:text="图片"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="@dimen/dp_15"/>
            <TextView
                android:id="@+id/my_collection_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/my_collection_pc"
                android:drawableTop="@drawable/ic_collection_video"
                android:text="视频"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="@dimen/dp_15"/>
            <TextView
                android:id="@+id/my_collection_wj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:drawableTop="@drawable/ic_collection_file"
                android:layout_toRightOf="@+id/my_collection_video"
                android:text="文章"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/my_collection_lj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/my_collection_pc"
                android:drawableTop="@drawable/ic_collection_lj"
                android:text="链接"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="@dimen/dp_15"/>
            <TextView
                android:id="@+id/my_collection_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/my_collection_lj"
                android:drawableTop="@drawable/ic_collection_notebook"
                android:layout_below="@+id/my_collection_video"
                android:text="笔记"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="@dimen/dp_15"/>
            <TextView
                android:id="@+id/my_collection_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/my_collection_book"
                android:layout_below="@+id/my_collection_wj"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:drawableTop="@drawable/ic_collection_more"
                android:text="更多"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="15dp" />
        </RelativeLayout>


</RelativeLayout>