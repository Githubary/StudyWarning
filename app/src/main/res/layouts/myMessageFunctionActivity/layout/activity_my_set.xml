<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_set_toolbar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ToolbarPopupTheme"
        >
        <TextView
            android:id="@+id/my_set_tilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="设置"
            android:textColor="@color/dialog_black"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/my_set_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:text="帮助"
            android:textSize="14dp"
            android:textColor="#1296db"/>

    </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/my_set_Linear1"
            android:layout_below="@+id/my_set_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/my_set_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_background"
                android:text="账号管理"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/dp_20"
                android:textSize="@dimen/dp_15"
                android:drawableRight="@drawable/ic_rightjiantou"
                />
            <TextView
                android:id="@+id/my_set_changpw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_background"
                android:text="修改密码"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/dp_20"
                android:textSize="@dimen/dp_15"
                android:drawableRight="@drawable/ic_rightjiantou"
                />
            <TextView
                android:id="@+id/my_set_controlspace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_background"
                android:text="管理空间"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/dp_20"
                android:textSize="@dimen/dp_15"
                android:drawableRight="@drawable/ic_rightjiantou"
                />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/my_set_Linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_set_Linear1"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical">
        <TextView
            android:id="@+id/my_set_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_background"
            android:text="隐私"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:drawableRight="@drawable/ic_rightjiantou"
            />
        <TextView
            android:id="@+id/my_set_disturb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_background"
            android:text="免打扰"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:drawableRight="@drawable/ic_rightjiantou"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_set_Linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_set_Linear2"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical">
        <TextView
            android:id="@+id/my_set_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_background"
            android:text="关于我们"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:drawableRight="@drawable/ic_rightjiantou"
            />
        <TextView
            android:id="@+id/my_set_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_background"
            android:text="帮助与反馈"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:drawableRight="@drawable/ic_rightjiantou"
            />
        <TextView
            android:id="@+id/my_set_edition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_background"
            android:text="版本与更新"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:drawableRight="@drawable/ic_rightjiantou"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/my_set_quit"
        android:layout_below="@+id/my_set_Linear3"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@color/actionsheet_red"
        android:textColor="@color/dialog_white"
        android:text="退出登录"
        android:gravity="center_vertical|center_horizontal"/>
</RelativeLayout>