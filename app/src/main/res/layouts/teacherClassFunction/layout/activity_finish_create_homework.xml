<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    tools:context=".mvp.view.teacherClassFunction.finishCreateHomeworkActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/finish_create_homework_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:popupTheme="@style/ToolbarPopupTheme">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="作业发布"
            android:textColor="@color/dialog_black"
            android:textSize="22dp" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/time_start"
        android:layout_below="@+id/finish_create_homework_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/line_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="开始日期 : "/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/line_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="结束日期 : "/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:singleLine="true"/>
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="确认发布"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_margin="40dp"
        android:background="#1296db"/>

</RelativeLayout>